		<span aria-hidden class="hidden md:inline"> . </span> 
		<br aria-hidden class="block md:hidden">
		<span>
			<script is:inline>
				const END_DATE = 1709575200000
				const d = new Date(END_DATE)
				const date = d.toLocaleTimeString("es-ES",{
					hour:"2-digit",
					minute:"2-digit"
				}) 

				// get current timezone
				const tzOffset= d.getTimezoneOffset() / 60
				const diff = tzOffset * -1
				const gmt = diff > 0 ? `GMT+${diff}` : `GMT+${Math.abs(diff)}`

				const TZ_DICRIONARY = {
					"GMT+1" : "CET"
				}

				const tz = TZ_DICRIONARY[gmt] ?? gmt

				const selfScript = document.currentScript
				selfScript.parentNode.innerHTML = `${date} ${tz}`
			</script>
		</span>
	</h2>

